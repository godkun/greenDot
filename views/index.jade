doctype html
html
  head
    link(title="greenDot" href="/img/icon.png" rel="icon")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="/bootstrap/css/bootstrap.min.css")
    title greenDot
    script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.js')
  body
  div.container(style='padding:5px; background-color:rgba(0,0,0,0.8);')
    div.row
      div.col-lg-6
        span(style='color:#6cc644; font-size:2em') GreenDot
      form(class='form-inline col-lg-6')
        div.input-group
          label(class="sr-only" for="user") 搜索用户
          input(id='user' type='text' placeholder='请输入你的GitHub ID' class='form-control')
          span.input-group-btn
            button(id='ajax' type="button" class="btn btn-default") ajax提交
            button(id='newpage' type="button" class="btn btn-default") 刷新提交
  div(id='container' )
    h3(class='title' style='text-align:center') 
  script(src='/js/mychart.js')
  script.
    document.querySelector('#newpage').addEventListener('click',function(){
      var input=document.querySelector('#user');
      if (!input.value){
        input.focus();
        return false;
      }
      var user=input.value;
      window.location.href+='user/'+user;//转到localhost:3000/user/id
    })